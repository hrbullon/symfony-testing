<div class="col-md-4">
    <div class="card mb-4 product-wap rounded-0">
        <div class="card rounded-0">
            <img class="card-img rounded-0 img-fluid" src="{{ asset('img/' ~ product.image) }}">
            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                <ul class="list-unstyled">
                    <li><a class="btn btn-success text-white" href="{{ path('app_shop_product') }}"><i class="far fa-heart"></i></a></li>
                    <li><a class="btn btn-success text-white mt-2" href="{{ path('app_shop_product') }}"><i class="far fa-eye"></i></a></li>
                    <li><a class="btn btn-success text-white mt-2" href="{{ path('app_shop_product') }}"><i class="fas fa-cart-plus"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="card-body">
            <a href="shop/product" class="h3 text-decoration-none">{{ product.name }}</a>
            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                <li>{{ product.size }}</li>
            </ul>
            <ul class="list-unstyled d-flex justify-content-center mb-1">
                <li>
                    {% for i in 0..5 %}
                        {% if product.rate >= i %}
                            <i class="text-warning fa fa-star"></i>
                        {% else %}
                            <i class="text-muted fa fa-star"></i>
                        {% endif %}
                    {% endfor %}
                </li>
            </ul>
            <p class="text-center mb-0">{{ product.price }}</p>
        </div>
    </div>
</div>